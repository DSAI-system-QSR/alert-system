    <script>
        let generatedMessage = '';

        function generateMessage() {
            const problem = document.getElementById('problem').value.trim();
            const action = document.getElementById('action').value.trim();
            const completion = document.getElementById('completion').value.trim();
            const manager = document.getElementById('manager').value.trim();

            if (!problem || !action || !completion || !manager) {
                showNotification('ëª¨ë“  í•„ë“œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”!', 'error');
                return;
            }

            const now = new Date();
            const dateTime = now.toLocaleString('ko-KR', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
                hour12: false
            });

            generatedMessage = `ğŸ“Œ[ë¬¸ì œë°œìƒ] ${problem}
ğŸ› [ì¡°ì¹˜] ${action}
âœ…[ì™„ë£Œ] ${completion}
ğŸ“… ${dateTime} | ğŸ‘¨â€ğŸ”§ ë‹´ë‹¹ì: ${manager}`;

            document.getElementById('previewMessage').textContent = generatedMessage;
            document.getElementById('timestamp').textContent = `ìƒì„±ì‹œê°„: ${dateTime}`;
            document.getElementById('previewContainer').style.display = 'block';
            
            // ë¶€ë“œëŸ¬ìš´ ìŠ¤í¬ë¡¤
            document.getElementById('previewContainer').scrollIntoView({ 
                behavior: 'smooth' 
            });

            showNotification('ë©”ì‹œì§€ê°€ ì„±ê³µì ìœ¼ë¡œ ìƒì„±ë˜ì—ˆìŠµë‹ˆë‹¤!', 'success');
        }

        function copyMessage() {
            if (!generatedMessage) {
                showNotification('ë¨¼ì € ë©”ì‹œì§€ë¥¼ ìƒì„±í•´ì£¼ì„¸ìš”!', 'error');
                return;
            }

            navigator.clipboard.writeText(generatedMessage).then(() => {
                showNotification('ë©”ì‹œì§€ê°€ í´ë¦½ë³´ë“œì— ë³µì‚¬ë˜ì—ˆìŠµë‹ˆë‹¤!', 'success');
            }).catch(() => {
                // í´ë¦½ë³´ë“œ APIê°€ ì§€ì›ë˜ì§€ ì•ŠëŠ” ê²½ìš° ëŒ€ì²´ ë°©ë²•
                const textArea = document.createElement('textarea');
                textArea.value = generatedMessage;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showNotification('ë©”ì‹œì§€ê°€ í´ë¦½ë³´ë“œì— ë³µì‚¬ë˜ì—ˆìŠµë‹ˆë‹¤!', 'success');
            });
        }

        function sendToKakao() {
            if (!generatedMessage) {
                showNotification('ë¨¼ì € ë©”ì‹œì§€ë¥¼ ìƒì„±í•´ì£¼ì„¸ìš”!', 'error');
                return;
            }

            // ë©”ì‹œì§€ ìë™ ë³µì‚¬
            copyMessage();
            
            // ì¹´ì¹´ì˜¤í†¡ ì•±ìœ¼ë¡œ ì§ì ‘ ì—°ê²° ì‹œë„
            const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
            
            if (isMobile) {
                // ëª¨ë°”ì¼ì—ì„œ ì¹´ì¹´ì˜¤í†¡ ì•± ì—´ê¸°
                const kakaoAppUrl = 'kakaotalk://';
                window.location.href = kakaoAppUrl;
                
                setTimeout(() => {
                    // ì•±ì´ ì—†ìœ¼ë©´ ì›¹ìœ¼ë¡œ ì´ë™
                    window.open('https://web.kakao.com/', '_blank');
                }, 1500);
            } else {
                // PCì—ì„œëŠ” ì›¹ ì¹´ì¹´ì˜¤í†¡ ì—´ê¸°
                window.open('https://web.kakao.com/', '_blank');
            }
            
            showNotification('ë©”ì‹œì§€ê°€ ë³µì‚¬ë˜ì—ˆìŠµë‹ˆë‹¤! ì¹´ì¹´ì˜¤í†¡ì—ì„œ Ctrl+Vë¡œ ë¶™ì—¬ë„£ê¸° í•˜ì„¸ìš”!', 'success');
        }

        function clearForm() {
            document.getElementById('notificationForm').reset();
            document.getElementById('previewContainer').style.display = 'none';
            generatedMessage = '';
            showNotification('ì–‘ì‹ì´ ì´ˆê¸°í™”ë˜ì—ˆìŠµë‹ˆë‹¤.', 'info');
        }

        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.classList.add('show');

            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // ë¹ ë¥¸ ì…ë ¥ì„ ìœ„í•œ ì˜ˆì‹œ ë°ì´í„° ìë™ ì…ë ¥ ê¸°ëŠ¥ ì¶”ê°€
        function loadSampleData() {
            document.getElementById('problem').value = 'ê¸ˆí˜• ì˜¨ë„ ì´ìƒ';
            document.getElementById('action').value = 'ê¸ˆí˜• ì˜¨ë„ì„¼ì„œ êµì²´';
            document.getElementById('completion').value = 'í…ŒìŠ¤íŠ¸ ì´ìƒ ì—†ìŒ';
            document.getElementById('manager').value = 'ê¹€ë¯¼ìˆ˜';
            showNotification('ì˜ˆì‹œ ë°ì´í„°ê°€ ì…ë ¥ë˜ì—ˆìŠµë‹ˆë‹¤!', 'info');
        }

